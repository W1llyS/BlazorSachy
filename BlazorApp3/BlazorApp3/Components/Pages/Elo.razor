@page "/Elo"
@using BlazorApp3.Data.Classes
@using BlazorApp3.Data.Services
@inject Elo1Service EloService

<PageTitle>Elo</PageTitle>



@if ( elo1List == null)
{
    <p><em>Loading...</em></p>
    
}
else
{
    foreach (var Elo in elo1List)
    {
        <div>
            <p>@Elo.IdPlayer --- @Elo.Datum --- @Elo.Hodnota</p>
        </div>
    }
    
}

@code {
    private List<Elo1>? elo1List;

    protected override async Task OnInitializedAsync()
    {
        elo1List = await EloService.GetElo1sAsync(); // Ensure you have the 'Async' suffix and parentheses
    }
}
