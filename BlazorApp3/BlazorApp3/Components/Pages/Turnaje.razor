@page "/Turnaje"
@using BlazorApp3.Data.Classes
@using BlazorApp3.Data.Services
@inject turnajeServices turnajeServices

<PageTitle>Turnaje</PageTitle>



@if (turnajList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    foreach (var Tur in turnajList)
    {
        <div>
            <p>@Tur.Nazev --- @Tur.DatumZalozeni --- @Tur.Stav --- @Tur.PocetZapasuvKole --- @Tur.DelkaPartie --- @Tur.Misto</p>
        </div>
    }
}

@code {
    private List<Turnaj1>? turnajList;

    protected override async Task OnInitializedAsync()
    {
        turnajList = await turnajeServices.GetTurnaj1sAsync(); // Ensure you have the 'Async' suffix and parentheses
          
    }
}
